<h1>Beers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Sweet</th>
      <th>Bitter</th>
      <th>Sour</th>
      <th>Smell</th>
      <th>Alcohol</th>
      <th>Memo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= beer.name %></td>
        <td><%= beer.price %></td>
        <td><%= beer.sweet %></td>
        <td><%= beer.bitter %></td>
        <td><%= beer.sour %></td>
        <td><%= beer.smell %></td>
        <td><%= beer.alcohol %></td>
        <td><%= beer.memo %></td>
        <td><%= link_to 'Show', beer %></td>
        <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
        <td><%= link_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

