<h1>Listing Users</h1>
<p class="right-btn"><%= link_to 'New User', new_user_path, :class => 'ink-button blue' %></p>

<table class="ink-table alternating">
  <thead>
    <tr>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, :class=>'ink-button' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
