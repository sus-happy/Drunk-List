<%= form_tag user_sessions_path, :method => :post, :class => 'ink-form' do %>
  <div class="control-group">
    <%= label_tag :email %>
    <div class="control">
      <%= text_field_tag :email %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :password %><br />
    <div class="control">
      <%= password_field_tag :password %>
    </div>
  </div>
  <div class="control-group">
    <div class="control">
      <button class="ink-button ink-button-bar blue" type="submit">Signin</button>
    </div>
  </div>
<% end %>